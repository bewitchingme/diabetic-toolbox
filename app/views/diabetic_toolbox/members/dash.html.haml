= javascript_include_tag "//www.google.com/jsapi", "chartkick"

.container-fluid
  .row
    .content-dashboard
      .panel.panel-default.tabbed
        .panel-heading.zeroed= render_member_navigation :summary
        .panel-body
          .row
            .content-quickies.smooth
              .quickies-item= render_member_overview
              .quickies-item= link_to t('views.members.dash.record'), '#', class: 'btn btn-default btn-sm btn-block'
              .quickies-item= link_to t('views.members.dash.report'), '#', class: 'btn btn-default btn-sm btn-block'
            .content-history.smooth
              #chartkick.panel-body
                - if current_member.has_no_readings?
                  .text-center No Readings Recorded
                - else
                  = line_chart @chart_data, library: @library, height: '130px'
