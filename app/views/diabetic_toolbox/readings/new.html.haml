.container-fluid
  .row
    .content-readings
      = form_for @reading, url: create_reading_path, builder: DiabeticToolbox::StandardFormBuilder do |f|
        .half
          .form-group
            = f.label :glucometer_value
            = f.text_field :glucometer_value
          .form-group
            = f.label :test_time
            = f.text_field :test_time
        .half
          .form-group
            = f.label :meal
            = f.select :meal, meal_options
          .form-group
            = f.label :intake
            = f.text_field :intake
        .text-center
          = f.submit t('views.readings.record')
