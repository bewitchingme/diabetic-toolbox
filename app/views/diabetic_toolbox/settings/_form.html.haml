= form_for @setting, url: (@setting.new_record? ? create_setting_path : update_settings_path) do |f|
  .panel.panel-default
    .panel-heading.panel-title
      = t('views.settings.titles.measurements')
    .panel-body
      #settings_dependencies
        .row
          .half.smooth
            .form-group
              = f.label :glucometer_measure_type, class: 'control-label'
              = f.select :glucometer_measure_type, glucometer_options(@setting), { include_blank: (true if @setting.new_record?) }, { class: 'form-control', 'data-toggle' => 'tooltip', 'data-placement' => 'top' }
          .half.smooth
            .form-group
              = f.label :intake_measure_type, class: 'control-label'
              = f.select :intake_measure_type, intake_options(@setting), { include_blank: (true if @setting.new_record?) }, { class: 'form-control', 'data-toggle' => 'tooltip', 'data-placement' => 'top' }
  %div{ id: "#{'settings_for_calculation' if @setting.new_record?}" }
    .panel.panel-default
      .panel-heading.panel-title= t('views.settings.titles.settings')
      .panel-body
        .row
          .half.smooth
            .form-group
              = f.label :intake_ratio, class: 'control-label'
              .input-group
                = f.text_field :intake_ratio, class: 'form-control'
                #intake_measurement_addon.input-group-addon= bootstrap_addon_intake(@setting)
          .half.smooth
            .form-group
              = f.label :correction_base, class: 'control-label'
              .input-group
                = f.text_field :correction_base, class: 'form-control'
                #correction_base_addon.input-group-addon= bootstrap_addon_glucometer(@setting)
        .row
          .half.smooth
            .form-group
              = f.label :increments_by, class: 'control-label'
              .input-group
                = f.text_field :increments_by, class: 'form-control'
                #increments_by_addon.input-group-addon= bootstrap_addon_glucometer(@setting, true)
          .half.smooth
            .form-group
              = f.label :ll_units_per_day, class: 'control-label'
              .input-group
                = f.text_field :ll_units_per_day, class: 'form-control'
                #ll_units_per_day_addon.input-group-addon= t('views.settings.ll_units_per_day_addon')
    .form-group.text-center
      = f.submit 'Submit', class: 'btn btn-primary'
