!!! 5
%html
  %head
    %title= t('navigation.brand')
    = stylesheet_link_tag    "diabetic_toolbox/application", media: "all"
    = javascript_include_tag "diabetic_toolbox/application"
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-default.navbar-fixed-top{role: 'navigation'}
      .container-fluid
        .row
          .content-nav.smooth
            .navbar-header
              %button.navbar-toggle{'data-target' => '.navbar-collapse', 'data-toggle' => 'collapse', type: 'button'}
                %span.sr-only= t('navigation.sr_only')
                %span.icon-bar
                %span.icon-bar
                %span.icon-bar
              %a.navbar-brand{href: "#{root_path}"}= t('navigation.brand')
            .collapse.navbar-collapse
              %ul.nav.navbar-nav
                %li
                  %a{href: '#', rel: "relativeanchor"}= t('navigation.about')
              %ul.nav.navbar-nav.navbar-right
                - if member_signed_in?
                  %li.dropdown
                    %a.dropdown-toggle{'data-toggle' => 'dropdown', :role => 'button', 'aria-expanded' => 'false'}
                      .fa.fa-user
                      = current_member.username
                      %span.caret
                    %ul.dropdown-menu{ role: 'menu' }
                      %li= link_to t('navigation.authentication.common.sign_out'), member_sign_out_path, method: :delete
                - else
                  %li= link_to t('navigation.authentication.common.sign_in'), member_sign_in_path
    .Application
      - if member_signed_in?
        = render partial: 'diabetic_toolbox/members/member_navigation'
      = yield